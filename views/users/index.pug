extends ../layout/common

block content

	h1 Users
	a.btn.btn-warning.my-2(href='/users/create')  Create users


	form(action='/users/search', method='GET')
		.form-inline
			input(type='text', name='searchValue', value = searchValue, class='form-control')
			button(class='btn btn-primary ml-2', type='submit') Search

	table.table.table-bordered
		tr
			th Avatar
			th Name
			th Phone
			th Email
			th Action
		each user in users
			tr
				td
					img(src=user.fileUpload,width=64, height=64)
				td= user.name 
				td= user.phone 
				td= user.email
				td
					a.badge.badge-primary(href='/users/'+ user._id, class='ml-2') View