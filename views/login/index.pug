extends ../layout/common

block content
	h1 Login

	if errors
			each error in errors
				.alert.alert-danger= error

	.form-group
		form(action='/login/checkLogin', method='POST')
			label(for='mail') Email
			input#mail(type='text', name='mail', class='form-control', value= values? values.mail : '')
			label(for='pwd') Password
			input#pwd(type='Password', name='pwd', class='form-control')
			button(class='btn btn-danger my-2') Login